rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	
    match /feedback/{documentId} {
      allow create: if true;
      allow read, write, update, delete: if false;
    }
    
    match /signUps/{documentId} {
      allow create, read: if true;
      allow write, update, delete: if false;
    }
    
    match /nublyResearch/{documentId} {
      allow create, read: if true;
      allow write, update, delete: if false;
    }
    
    match /viewAppLogins/{documentId} {
      allow get: if true;     // or false to block reads
      allow list: if false;   // avoid enumeration

      allow create: if true;  // or add your predicate
      allow update: if true;  // or add your predicate
      allow delete: if false; // explicitly deny
    }
    
    match /researchLogins/{documentId} {
      allow get: if true;     // or false to block reads
      allow list: if false;   // avoid enumeration

      allow create: if true;  // or add your predicate
      allow update: if true;  // or add your predicate
      allow delete: if false; // explicitly deny
    }
    
    match /researchInteractions/{documentId} {
      allow get: if true;     // or false to block reads
      allow list: if false;   // avoid enumeration

      allow create: if true;  // or add your predicate
      allow update: if true;  // or add your predicate
      allow delete: if false; // explicitly deny
    }
  }
}